{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "outDir": "./tsc-out/lib",
    "paths": {}
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "enableResourceInlining": true,
    "fullTemplateTypeCheck": true,
    "skipTemplateCodegen": true,
    "strictInjectionParameters": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["projects/**/*.ts"]
}
